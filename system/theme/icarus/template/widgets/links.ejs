<div class="card widget" data-type="links">
  <div class="card-content">
    <div class="menu">
      <h3 class="menu-label"><%= widget.name %></h3>
      <ul class="menu-list">
        <% widget.links.forEach(function(link) { %>
        <li>
          <a class="level is-mobile" href="<%= link.url %>" target="_blank" rel="noopener">
            <span class="level-left">
              <span class="level-item"><%= link.name %></span>
            </span>
            <span class="level-right">
              <span class="level-item tag"><%= widget.getDomain(link) %></span>
            </span>
          </a>
        </li>
        <% }); %>
      </ul>
    </div>
  </div>
</div>
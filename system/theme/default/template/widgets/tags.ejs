<div class="card widget">
  <div class="card-content">
    <div class="menu">
      <h3 class="menu-label"><%= widget.name %></h3>
      <div class="field is-grouped is-grouped-multiline">
        <% widget.tags.forEach(function(tag) { %>
        <div class="control">
          <a class="tags has-addons" href="<%= common.base %>/tag/<%= tag.id %>">
            <span class="tag"><%= tag.name %></span>
            <span class="tag"><%= tag.count %></span>
          </a>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>
